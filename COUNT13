#include <bits/stdc++.h>
using namespace std;
long long dp[20][20][10][10];
int main()
{
    int n; cin >> n;
    for(int i = 0; i < 10; ++i) dp[0][0][0][i] = 1;
    for(int i = 1; i < n; ++i) for(int j = 0; j < n; ++j){
    	for(int k1 = 0; k1 < 10; ++k1) for(int k2 = 0; k2 < 10; ++k2)
    		if(k2 == 1){
    			for(int k3 = 0; k3 < 10; ++k3)
    			if(k3 == 3)
    				dp[i][j+1][k2][k3] += dp[i-1][j][k1][k2];
    			else
    				dp[i][j][k2][k3] += dp[i-1][j][k1][k2]; 				
    		}
    		else{
    			for(int k3 = 0; k3 < 10; ++k3){
    				dp[i][j][k2][k3] += dp[i-1][j][k1][k2]; 
    			}
    		}
    }
   	long long ans = 0;
   	for(int j = 1; j < n; ++j) for(int k1 = 0; k1 < 10; ++k1) for(int k2 = 0; k2 < 10; ++k2){
   		ans += dp[n-1][j][k1][k2];
   	}
   	cout << ans;
    return 0;
}

#include <bits/stdc++.h>
using namespace std;
long long dp[20][20][10];
int main()
{
    int n; cin >> n;
    for(int i = 0; i < 10; ++i) dp[0][0][i] = 1;
    for(int i = 1; i < n; ++i) for(int j = 0; j < n; ++j) for(int k = 0; k < 10; ++k){
    		if(k == 1){
    			for(int nk = 0; nk < 10; ++nk){
	    			if(nk == 3)
	    				dp[i][j+1][nk] += dp[i-1][j][k];
	    			else
	    				dp[i][j][nk] += dp[i-1][j][k]; 	
	    		}			
    		}
    		else{
    			for(int nk = 0; nk < 10; ++nk){
    				dp[i][j][nk] += dp[i-1][j][k];
    			} 
    		}
    }
   	long long ans = 0;
   	for(int j = 1; j < n; ++j) for(int k = 0; k < 10; ++k){
   		ans += dp[n-1][j][k];
   	}
   	cout << ans;
    return 0;
}
